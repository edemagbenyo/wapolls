{
  "name": "WaPolls",
  "description": "WhatsApp polls allows you to run polls in your whatsapp group.",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "declarativeContent"
  ],
  "browser_action": {
    "default_popup": "popup.html" 
  }  
}